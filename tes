    <aside id="sidebar">
        <div class="brand">üìö Absensi</div>
        <div class="menu-label">Pilih Kelas</div>
        <ul class="class-list" id="classList"></ul>
        <button class="reset-btn" onclick="resetAll()">üóëÔ∏è Reset Data</button>
    </aside>

    <main>
        <header>
            <div style="display:flex; align-items:center; gap:10px;">
                <button class="menu-toggle" onclick="toggleSidebar()">‚ò∞</button>
                <h2 id="pageTitle">Rekap Absensi</h2>
            </div>
            
            <button class="btn-download" id="dlBtn" onclick="downloadCSV()">
                üì• <span>Unduh Rekap (.csv)</span>
            </button>
        </header>

        <div class="content-scroll">
            <div class="tabs" id="monthTabs"></div>

            <div class="recap-grid">
                <div class="card bg-h"><div class="card-label">Total Hadir</div><div class="card-val" id="valH">0</div></div>
                <div class="card bg-s"><div class="card-label">Total Sakit</div><div class="card-val" id="valS">0</div></div>
                <div class="card bg-i"><div class="card-label">Total Izin</div><div class="card-val" id="valI">0</div></div>
                <div class="card bg-a"><div class="card-label">Total Alpha</div><div class="card-val" id="valA">0</div></div>
            </div>

            <div class="add-box">
                <input type="text" id="inpName" class="add-input" placeholder="Ketik nama siswa..." onkeypress="handleEnter(event)">
                <button class="add-btn" onclick="addStudent()">+ Tambah</button>
            </div>

            <div class="legend">
                <div class="l-item"><div class="l-box" style="background:var(--col-h)"></div> Hadir</div>
                <div class="l-item"><div class="l-box" style="background:var(--col-s)"></div> Sakit</div>
                <div class="l-item"><div class="l-box" style="background:var(--col-i)"></div> Izin</div>
                <div class="l-item"><div class="l-box" style="background:var(--col-a)"></div> Alpha</div>
            </div>

            <div class="grid-container">
                <table>
                    <thead>
                        <tr id="tableHeader">
                            <th class="sticky-col">Nama Siswa</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody"></tbody>
                </table>
            </div>
        </div>
    </main>

    <script>
        const classes = ["Kelas 4A", "Kelas 4B", "Kelas 4C", "Kelas 3A", "Kelas 3B", "Kelas 3C"];
        const months = ["Bulan 1", "Bulan 2", "Bulan 3", "Bulan 4", "Bulan 5"];
        const totalDays = 31; 
        const statusCycle = ["H", "S", "I", "A", ""];

        let appData = { currentClassIdx: 0, currentMonthIdx: 0, students: {}, attendance: {} };

        window.onload = function() {
            const saved = localStorage.getItem('absensi_final');
            if (saved) { appData = JSON.parse(saved); } 
            else { initEmptyData(); }
            renderAll();
        };

        function initEmptyData() {
            classes.forEach(c => { appData.students[c] = []; appData.attendance[c] = {}; });
            save();
        }

        function save() { localStorage.setItem('absensi_final', JSON.stringify(appData)); }

        function resetAll() {
            if(confirm("Hapus SEMUA DATA?")) { localStorage.removeItem('absensi_final'); location.reload(); }
        }

        function renderAll() {
            renderSidebar(); renderTabs(); renderTableHeader(); renderTableBody(); updateRecap();
        }

        function renderSidebar() {
            const list = document.getElementById('classList');
            list.innerHTML = '';
            classes.forEach((c, idx) => {
                const li = document.createElement('li');
                const btn = document.createElement('button');
                btn.className = `class-btn ${idx === appData.currentClassIdx ? 'active' : ''}`;
                btn.innerText = c;
                btn.onclick = () => switchClass(idx);
                li.appendChild(btn);
                list.appendChild(li);
            });
            document.getElementById('pageTitle').innerText = `Rekap: ${classes[appData.currentClassIdx]}`;
        }

        function renderTabs() {
            const container = document.getElementById('monthTabs');
            container.innerHTML = '';
            months.forEach((m, idx) => {
                const btn = document.createElement('button');
                btn.className = `tab ${idx === appData.currentMonthIdx ? 'active' : ''}`;
                btn.innerText = m;
                btn.onclick = () => switchMonth(idx);
                container.appendChild(btn);
            });
        }

        function renderTableHeader() {
            const tr = document.getElementById('tableHeader');
            tr.innerHTML = '<th class="sticky-col">Nama Siswa</th>';
            for(let i=1; i<=totalDays; i++) {
                const th = document.createElement('th');
                th.innerText = i;
                tr.appendChild(th);
            }
        }

        function renderTableBody() {
            const cls = classes[appData.currentClassIdx];
            const mth = months[appData.currentMonthIdx];
            const students = appData.students[cls] || [];
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';

            if(students.length === 0) {
                tbody.innerHTML = `<tr><td colspan="${totalDays+1}" style="text-align:center; padding:2rem; color:#aaa;">Belum ada data siswa.</td></tr>`;
                return;
            }

            students.forEach((name, idx) => {
                const tr = document.createElement('tr');
                const tdName = document.createElement('td');
                tdName.className = 'sticky-col';
                tdName.innerHTML = `<span>${name}</span> <span class="btn-del" onclick="deleteStudent(${idx})">&times;</span>`;
                tr.appendChild(tdName);

                for(let day=1; day<=totalDays; day++) {
                    const td = document.createElement('td');
                    let status = "";
                    if (appData.attendance[cls] && appData.attendance[cls][name] && appData.attendance[cls][name][mth]) {
                        status = appData.attendance[cls][name][mth][day] || "";
                    }
                    td.className = `day-cell status-${status}`;
                    td.innerText = status;
                    td.onclick = () => toggleStatus(cls, name, mth, day);
                    tr.appendChild(td);
                }
                tbody.appendChild(tr);
            });
        }

        function toggleStatus(cls, name, mth, day) {
            if(!appData.attendance[cls][name]) appData.attendance[cls][name] = {};
            if(!appData.attendance[cls][name][mth]) appData.attendance[cls][name][mth] = {};
            const currentStatus = appData.attendance[cls][name][mth][day] || "";
            const currentIndex = statusCycle.indexOf(currentStatus);
            const nextStatus = statusCycle[(currentIndex + 1) % statusCycle.length];
            appData.attendance[cls][name][mth][day] = nextStatus;
            save();
            renderTableBody(); updateRecap();
        }

        function updateRecap() {
            const cls = classes[appData.currentClassIdx];
            const mth = months[appData.currentMonthIdx];
            const students = appData.students[cls] || [];
            let totalH = 0, totalS = 0, totalI = 0, totalA = 0;
            students.forEach(name => {
                if(appData.attendance[cls][name] && appData.attendance[cls][name][mth]) {
                    const monthData = appData.attendance[cls][name][mth];
                    for(let d=1; d<=totalDays; d++) {
                        const stat = monthData[d];
                        if(stat === "H") totalH++; else if(stat === "S") totalS++; else if(stat === "I") totalI++; else if(stat === "A") totalA++;
                    }
                }
            });
            document.getElementById('valH').innerText = totalH;
            document.getElementById('valS').innerText = totalS;
            document.getElementById('valI').innerText = totalI;
            document.getElementById('valA').innerText = totalA;
        }

        function handleEnter(e) { if(e.key === 'Enter') addStudent(); }
        function addStudent() {
            const inp = document.getElementById('inpName');
            const name = inp.value.trim();
            const cls = classes[appData.currentClassIdx];
            if(!name) return alert("Nama kosong!");
            if(appData.students[cls].includes(name)) return alert("Nama sudah ada!");
            appData.students[cls].push(name);
            save();
            renderTableBody(); updateRecap();
            inp.value = ''; inp.focus();
        }
        function deleteStudent(idx) {
            const cls = classes[appData.currentClassIdx];
            const name = appData.students[cls][idx];
            if(confirm(`Hapus ${name}?`)) {
                appData.students[cls].splice(idx, 1);
                delete appData.attendance[cls][name];
                save();
                renderTableBody(); updateRecap();
            }
        }
        function switchClass(idx) { appData.currentClassIdx = idx; renderAll(); document.getElementById('inpName').value = ''; if(window.innerWidth <= 768) document.getElementById('sidebar').classList.remove('open'); }
        function switchMonth(idx) { appData.currentMonthIdx = idx; renderTabs(); renderTableBody(); updateRecap(); }
        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('open'); }

        // --- FUNGSI DOWNLOAD YANG DIPERBAIKI (BLOB API) ---
        function downloadCSV() {
            const cls = classes[appData.currentClassIdx];
            const mth = months[appData.currentMonthIdx];
            const students = appData.students[cls] || [];

            if(students.length === 0) {
                alert("Tidak ada data siswa untuk diunduh.");
                return;
            }

            // Siapkan Header
            let csvContent = "data:text/csv;charset=utf-8,\uFEFF"; // BOM Excel
            let headers = ["Nama Siswa"];
            for(let i=1; i<=totalDays; i++) headers.push(`Tgl ${i}`);
            headers.push("TOTAL Hadir", "TOTAL Sakit", "TOTAL Izin", "TOTAL Alpha");
            csvContent += headers.join(",") + "\r\n";

            // Siapkan Data
            students.forEach(name => {
                let row = [`"${name}"`]; // Quote nama
                let counts = {h:0, s:0, i:0, a:0};
                let data = appData.attendance[cls][name][mth] || {};

                for(let i=1; i<=totalDays; i++) {
                    let status = data[i] || "";
                    row.push(status);
                    if(status == 'H') counts.h++;
                    else if(status == 'S') counts.s++;
                    else if(status == 'I') counts.i++;
                    else if(status == 'A') counts.a++;
                }
                row.push(counts.h, counts.s, counts.i, counts.a);
                csvContent += row.join(",") + "\r\n";
            });

            // 1. Buat Blob (Binary Large Object) dari konten CSV
            var blob = new Blob([csvContent], { type: "text/csv;charset=utf-8;" });
            
            // 2. Buat URL Link Download
            var url = URL.createObjectURL(blob);
            var link = document.createElement("a");
            
            // 3. Atur Atribut Link
            link.setAttribute("href", url);
            link.setAttribute("download", `Absensi_${cls}_${mth}.csv`);
            
            // 4. Klik Otomatis dan Bersihkan
            document.body.appendChild(link); // Diperlukan Firefox
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>
</html>
